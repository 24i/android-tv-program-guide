<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/programguide_program_row_height"
    android:layout_margin="@dimen/picker_item_spacing"
    android:background="@drawable/programguide_item_program_background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:layout_margin="20dp"
    tools:parentTag="android.widget.FrameLayout">

    <TextView
        android:id="@+id/title"
        style="@style/ProgramGuide.Text.Program.Title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="Item title" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:duplicateParentState="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minWidth="0dp"
        android:progressBackgroundTint="@color/programguide_item_progress_background"
        android:progressTint="@color/programguide_item_progress_foreground"
        android:visibility="gone"
        tools:progress="50"
        tools:visibility="visible" />
</merge>